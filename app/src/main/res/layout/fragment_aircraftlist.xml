<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/aircraftlistitemback"

    android:layout_marginLeft="5dp"
    android:layout_marginTop="2dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="2dp"
    android:padding="3dp">

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stretchColumns="1"
        android:layout_margin="2dp">

        <TableRow
            android:layout_height="30dp">

            <TextView
                android:id="@+id/nameView"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textSize="30dp"
                android:textColor="#FF00FF00"/>

        </TableRow>

        <TableRow
            android:layout_height="match_parent">

            <TextView
                android:layout_column="0"
                android:id="@+id/competitionNumberView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:textAppearance="?attr/textAppearanceListItem"
                android:background="#FF000000"
                android:textColor="#FF00FF00"
                android:textSize="14dp"/>

        </TableRow>


    </TableLayout>

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="1"
        android:layout_margin="2dp"
        android:weightSum="3">

        <TableRow
            android:layout_height="0px"
            android:layout_weight="1">

            <TextView
                android:layout_column="0"
                android:id="@+id/modelView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:textAppearance="?attr/textAppearanceListItem"
                android:background="#FF000000"
                android:textColor="#FF00FF00"
                android:textSize="12dp"
                android:layout_gravity="center_vertical"
                android:layout_span="2"/>

        </TableRow>

        <TableRow
            android:layout_height="0px"
            android:layout_weight="1">

            <TextView
                android:layout_column="0"
                android:id="@+id/altitudeView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:textAppearance="?attr/textAppearanceListItem"
                android:background="#FF000000"
                android:textColor="#FF00CC00"
                android:textSize="12dp"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_column="1"
                android:id="@+id/vRateView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:textAppearance="?attr/textAppearanceListItem"
                android:background="#FF000000"
                android:textColor="#FF00CC00"
                android:textSize="12dp"
                android:layout_gravity="center_vertical"/>

        </TableRow>

        <TableRow
            android:layout_height="0px"
            android:layout_weight="1">

            <TextView
                android:layout_column="0"
                android:id="@+id/relativePositionView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:textAppearance="?attr/textAppearanceListItem"
                android:background="#FF000000"
                android:textColor="#FF00CC00"
                android:textSize="12dp"
                android:layout_span="2"/>
        </TableRow>


    </TableLayout>



</LinearLayout>
